{
  "name": "svelte-fast-check",
  "version": "0.4.0",
  "description": "Up to 24x faster type and Svelte compiler warning checker for Svelte/SvelteKit projects using svelte2tsx + tsgo",
  "type": "module",
  "workspaces": [
    "tests/fixtures/*"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "svelte-fast-check": "bin/svelte-fast-check.sh"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "bun test tests/",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@jridgewell/trace-mapping": "^0.3.25",
    "@typescript/native-preview": "^7.0.0-dev.20251229.1",
    "cleye": "^2.2.1",
    "svelte2tsx": "^0.7.34"
  },
  "peerDependencies": {
    "svelte": ">=5.0.0",
    "typescript": ">=5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.5",
    "@types/node": "^22.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsup": "^8.0.0"
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "svelte",
    "sveltekit",
    "typescript",
    "type-checker",
    "tsgo",
    "typescript-go"
  ],
  "license": "MIT",
  "author": "Song Jaehak <astralhpi@gmail.com> (https://github.com/astralhpi)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/astralhpi/svelte-fast-check.git"
  },
  "bugs": {
    "url": "https://github.com/astralhpi/svelte-fast-check/issues"
  },
  "homepage": "https://github.com/astralhpi/svelte-fast-check#readme"
}
